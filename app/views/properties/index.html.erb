<p id="notice"><%= notice %></p>

<h1>Properties</h1>

<table>
  <thead>
    <tr>
      <th>Nickname</th>
      <th>Address</th>
      <th>Rent amount</th>
      <th>Rent reminder</th>
      <th>Rent due date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.nickname %></td>
        <td><%= property.address %></td>
        <td><%= property.rent_amount %></td>
        <td><%= property.rent_reminder %></td>
        <td><%= property.rent_due_date %></td>
        <td><%= property.user_id %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

